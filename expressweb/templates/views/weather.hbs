<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlinks}}
</head>
<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocapitalize="off">
                        <input type="submit" id="submitBtn" value="submit">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Friday</p>
                        <p id="tody_date">10 Dec</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output hear</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_r">0</span><sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer part -->
{{>footer}}
<script src="js/main.js">
    
</script>
</body>
</html>